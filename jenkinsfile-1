pipeline {
  agent any
tools {
        maven 'maven' // Name must match the Maven installation in Jenkins Global Tool Configuration
         
    }
environment {
        JAVA_HOME = '/Library/Java/JavaVirtualMachines/openjdk-17.jdk/Contents/Home'  // Update this path to the correct location
        PATH = "$JAVA_HOME/bin:$PATH"  // Add Java to the PATH
    }
 
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'SonarQube_Server') { 
         sh '''
                    export JAVA_HOME=$JAVA_HOME
                    export PATH=$JAVA_HOME/bin:$PATH
                    mvn sonar:sonar
                    '''
        }
      }
    }
  }
}
