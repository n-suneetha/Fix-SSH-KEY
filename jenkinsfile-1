pipeline {
    agent any
    environment {
        JAVA_HOME = '/Library/Java/JavaVirtualMachines/openlogic-openjdk-17.jdk/Contents/Home'  // Make sure this points to your correct Java path
        PATH = "$JAVA_HOME/bin:$PATH"
    }
    tools {
        maven 'maven'  // Ensure Maven is correctly configured in Jenkins Global Tool Configuration
    }
    stages {
        stage('Scan') {
            steps {
                withSonarQubeEnv(installationName: 'SonarQube_Server') {
                    sh '''
                        echo "JAVA_HOME is set to: $JAVA_HOME"
                        java -version  # Verify that the correct Java version is used
                        mvn sonar:sonar
                    '''
                }
            }
        }
    }
}
